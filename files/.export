export LESSOPEN="| /usr/bin/src-hilite-lesspipe.sh %s"
export LESS=' -R'
export JAVA_HOME=/usr/lib/jvm/java-8-openjdk
export MAVEN_HOME="/opt/maven/"
export ANT_HOME="/opt/ant"
export ANDROID_HOME="/opt/sdk-android" 
export SCALA_HOME="/opt/scala"

if [ -d /opt/bin ]; then
    export SCRIPTS_HOME="/opt/bin"
else
    export SCRIPTS_HOME="~/bin"
fi

export YARN_HOME="/$HOME/.yarn"
export GOPATH="$HOME/Projects/golang"
export GOBIN=$GOPATH/bin
export GRADLE_HOME="/opt/gradle"
export VAGRANT_HOME="/opt/vagrant"
export ACTIVATOR_HOME="/opt/activator"
export SBT_HOME="/opt/sbt"
export AVR_HOME="/usr/share/arduino/hardware/tools/avr"
export NDK_HOME="/opt/android-ndk"
export FIREFOX_HOME="/opt/firefox"

export PATH="$PATH:/usr/local/bin:/usr/bin:/bin:/usr/local/games:/usr/games"
export PATH="$YARN_HOME/bin:$HOME/.config/yarn/global/node_modules/.bin:$GOBIN:$FIREFOX_HOME:$NDK_HOME:$MAVEN_HOME/bin:$JAVA_HOME/bin:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$SCALA_HOME/bin:$SCRIPTS_HOME:$GRADLE_HOME/bin:$VAGRANT_HOME/bin:$ANT_HOME/bin:$ACTIVATOR_HOME:$SBT_HOME/bin:$AVR_HOME/bin:$MAVEN_HOME/bin:$PATH"

export EDITOR='vim'
export HISTSIZE=999999999
export SAVEHIST=$HISTSIZE

export PGDATABASE=postgres

# KUBE_PS1 is disabled by default. call kubeon to enable it
export KUBE_PS1_SYMBOL_ENABLE=false
export KUBE_PS1_ENABLED=off

# AWS PS1
unset RPROMPT
# prefix and suffix Controlled by theme
export ZSH_THEME_AWS_PREFIX=""
export ZSH_THEME_AWS_SUFFIX=""

WORK_FILE=$HOME/Life/work.sh
if [ -f $WORK_FILE ];
then
    source $WORK_FILE
fi

PC_SETTINGS_FILE=$HOME/.settings.sh
if [ -f $PC_SETTINGS_FILE ];
then
    source $PC_SETTINGS_FILE
fi
