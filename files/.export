export LESSOPEN="| /usr/bin/src-hilite-lesspipe.sh %s"
export LESS=' -R'
export JAVA_HOME=/usr/lib/jvm/default
export MAVEN_HOME="/opt/maven/"
export ANT_HOME="/opt/ant"
export ANDROID_HOME="/opt/sdk-android" 
export SCALA_HOME="/opt/scala"

if [ -d /opt/bin ]; then
    export SCRIPTS_HOME="/opt/bin"
else
    export SCRIPTS_HOME="~/bin"
fi

export MAKE_FLAGS="-j$(nproc --all)"
export CMAKE_BUILD_PARALLEL_LEVEL="$(nproc --all)"
export PIP_MAC_HOME="$HOME/Library/Python/3.7/bin"
export PIP_HOME="/$HOME/.local/bin"
export YARN_HOME="/$HOME/.yarn"
export GOPATH="$HOME/Projects/golang"
export GOBIN=$GOPATH/bin
export GRADLE_HOME="/opt/gradle"
export VAGRANT_HOME="/opt/vagrant"
export ACTIVATOR_HOME="/opt/activator"
export SBT_HOME="/opt/sbt"
export AVR_HOME="/usr/share/arduino/hardware/tools/avr"
export NDK_HOME="/opt/android-ndk"
export FIREFOX_HOME="/opt/firefox"
export CARGO_HOME="/$HOME/.cargo"

export PATH="$PATH:/usr/local/bin:/usr/bin:/bin:/usr/local/games:/usr/games:/usr/local/sbin"
export PATH="$PIP_MAC_HOME:$PIP_HOME:$CARGO_HOME/bin:$YARN_HOME/bin:$HOME/.config/yarn/global/node_modules/.bin:$GOBIN:$FIREFOX_HOME:$NDK_HOME:$MAVEN_HOME/bin:$JAVA_HOME/bin:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$SCALA_HOME/bin:$SCRIPTS_HOME:$GRADLE_HOME/bin:$VAGRANT_HOME/bin:$ANT_HOME/bin:$ACTIVATOR_HOME:$SBT_HOME/bin:$AVR_HOME/bin:$MAVEN_HOME/bin:$PATH"

if [[ "$OSTYPE" =~ ^darwin ]]; then
    export LIBRARY_PATH=$LIBRARY_PATH:/usr/local/opt/openssl/lib/
fi

export EDITOR='vim'
export HISTSIZE=999999999
export SAVEHIST=$HISTSIZE

export PGDATABASE=postgres
