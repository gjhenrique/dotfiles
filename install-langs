#!/bin/bash

if [ -d ~/.rbenv ]; then
    echo "rbenv is already installed"
else
    echo "Installing rbenv"
    git clone https://github.com/sstephenson/rbenv.git ~/.rbenv
    git clone https://github.com/sstephenson/ruby-build.git ~/.rbenv/plugins/ruby-build
    echo "rbenv install -l to install new versions"
fi

if [ -d ~/.nvm ]; then
    echo "nvm is already installed"
else
    echo "Installing nvm"
    curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.25.4/install.sh | bash
    echo "nvm ls-remote to install new versions"
fi

if [ -d ~/.pyenv ]; then
    echo "pyenv is already installed"
else
    echo "Installing pyenv"
    git clone https://github.com/yyuu/pyenv.git ~/.pyenv
    git clone https://github.com/yyuu/pyenv-virtualenv.git ~/.pyenv/plugins/pyenv-virtualenv
    echo "pyenv install -l to install new versions"
fi

if [ -d ~/.asdf ]; then
    echo "asdf is already installed"
else
    git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.2.1
    ~/.asdf/bin/asdf plugin-add golang https://github.com/kennyp/asdf-golang.git
    ~/.asdf/bin/asdf plugin-add elixir https://github.com/asdf-vm/asdf-elixir.git
    ~/.asdf/bin/asdf plugin-add lua https://github.com/Stratus3D/asdf-lua.git
    ~/.asdf/bin/asdf plugin-add erlang https://github.com/asdf-vm/asdf-erlang.git
fi


