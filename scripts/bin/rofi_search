#!/usr/bin/env sh

CONFIG_FILE="$HOME/.config/rofi/engine.json"
if [ -z $@ ]; then
    jq -r 'to_entries[]|[.value.trigger, .value.name]|join(" ")' < $CONFIG_FILE
else
    TEXT=$(cut -d ' ' -f2- <<<$1)
    TRIGGER=$(cut -d ' ' -f1 <<<$1)

    URL=$(jq -r "to_entries[]|select(.value.trigger==\"${TRIGGER}\")|[.value.url][0]" < $CONFIG_FILE)
    NEW_URL=$(sed "s/%s/$TEXT/g" <<<$URL)

    firefox "$NEW_URL"
fi
