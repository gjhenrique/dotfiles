#!/bin/bash

## Created By Aditya Shakya

MENU="$(rofi -sep "|" -dmenu -i -p 'System' -location 0 -font "Source Code Pro Mono 16" -yoffset -75 -xoffset -69 -width 15 -hide-scrollbar -line-padding 4 -padding 20 -lines 4 <<< "Lock|Logout|Reboot|Shutdown")"
            case "$MENU" in
                *Lock) xscreensaver-command -lock ;;
                *Logout) openbox --exit;;
                *Reboot) systemctl reboot ;;
                *Shutdown) systemctl -i poweroff
            esac
