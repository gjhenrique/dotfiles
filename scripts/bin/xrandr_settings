#!/bin/bash

VGA_MONITOR=$(xrandr | grep -w 'connected' | sed -n '3p' | cut -f 1 -d ' ')
HDMI_MONITOR=$(xrandr | grep -w 'connected' | sed -n '2p' | cut -f 1 -d ' ')

if [ $(hostname) = 'henrique' ];
then
    # DISPLAY=:1 xrandr --output DisplayPort-2 --size 1920x1080 --pos 0x0 --rotate left --left-of DisplayPort-1 --auto --scale 1x1 --output DisplayPort-2 --pos 1680x0 --auto --primary
    DISPLAY=:1 xrandr --output DisplayPort-2 --auto --scale 1x1 --rotate normal

    # 1920x1080 --pos 0x0 --rotate left --left-of DisplayPort-1 --auto --scale 1x1 --output DisplayPort-2 --pos 1680x0 --auto --primary
fi
