#!/bin/bash

VGA_MONITOR=$(xrandr | grep -w 'connected' | sed -n '3p' | cut -f 1 -d ' ')
HDMI_MONITOR=$(xrandr | grep -w 'connected' | sed -n '2p' | cut -f 1 -d ' ')

if [ $(hostname) = 'henrique' ];
then
    xrandr --output LVDS1 --off
    xrandr --output VGA1 --auto
    xrandr --output HDMI1 --auto
    xrandr --output HDMI1 --auto --primary --right-of VGA1
fi
