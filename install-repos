#! /bin/bash

if [ -d ~/.asdf ]; then
    echo "asdf is already installed"
else
    git clone https://github.com/asdf-vm/asdf.git ~/.asdf
    ~/.asdf/bin/asdf plugin-add golang https://github.com/kennyp/asdf-golang.git
    ~/.asdf/bin/asdf plugin-add elixir https://github.com/asdf-vm/asdf-elixir.git
    ~/.asdf/bin/asdf plugin-add lua https://github.com/Stratus3D/asdf-lua.git
    ~/.asdf/bin/asdf plugin add ruby https://github.com/asdf-vm/asdf-ruby.git
    ~/.asdf/bin/asdf plugin add nodejs https://github.com/asdf-vm/asdf-nodejs.git
fi

mkdir -p ~/Projects/elisp
if [ -f ~/.emacs ]; then
    echo "~/.emacs already exists" 1>&2
else
    echo "Installing chemacs"
    git clone https://github.com/plexus/chemacs.git ~/Projects/elisp/chemacs
    sh ~/Projects/elisp/chemacs/install.sh
fi

if [ -d ~/Projects/elisp/doom-emacs ]; then
    echo "~/.emacs.d already exists" 1>&2
else
    echo "Installing doom emacs"
    git clone https://github.com/hlissner/doom-emacs ~/Projects/elisp/doom-emacs
    ~/Projects/elisp/doom-emacs/bin/doom install
    ~/Projects/elisp/doom-emacs/bin/doom sync
fi

if [ -e ~/.tmux-themepack ]; then
    echo "tmux-themepack is already installed"
else
    echo "Installing tmux-themepack"
    git clone https://github.com/jimeh/tmux-themepack.git ~/.tmux-themepack
fi

# Use --new-tab as the default browser
xdg-settings set default-web-browser firefox-dev.desktop
