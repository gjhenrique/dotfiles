#! /bin/bash

if [ -d ~/.emacs.d ]; then
    echo "~/.emacs.d already exists" 1>&2
else
    echo "Installing spacemacs"
    git clone --recursive https://github.com/syl20bnr/spacemacs.git ~/.emacs.d
fi

if [ -d ~/.oh-my-zsh ]; then
    echo "oh-my-zsh is already installed"
else
    echo "Installing oh-my-zsh"
    git clone --depth=1 https://github.com/robbyrussell/oh-my-zsh.git ~/.oh-my-zsh
    . ~/.zshrc
fi

if [ -d ~/.vimperator/colors ]; then
    echo "vimperator-colors is already installed"
else
    echo "Installing vimperator-colors"
    git clone https://github.com/vimpr/vimperator-colors.git ~/.vimperator/colors
    git -C "$HOME/.vimperator/colors" apply "$PWD/patches/darkness-theme.patch"
fi

if [ -e ~/.git-prompt.sh ]; then
    echo "git-prompt is already installed"
else
    echo "Installing git-prompt"
    curl -o ~/.git-prompt.sh https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh
fi

# TODO: Install vundle
# git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
# vim +PluginInstall +qall
