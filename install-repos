#! /bin/bash

if [ -d ~/.asdf ]; then
    echo "asdf is already installed"
else
    git clone https://github.com/asdf-vm/asdf.git ~/.asdf
    ~/.asdf/bin/asdf plugin-add golang https://github.com/kennyp/asdf-golang.git
    ~/.asdf/bin/asdf plugin-add elixir https://github.com/asdf-vm/asdf-elixir.git
    ~/.asdf/bin/asdf plugin-add lua https://github.com/Stratus3D/asdf-lua.git
    ~/.asdf/bin/asdf plugin add ruby https://github.com/asdf-vm/asdf-ruby.git
    ~/.asdf/bin/asdf plugin add nodejs https://github.com/asdf-vm/asdf-nodejs.git
    ~/.asdf/bin/asdf plugin-add python
    ~/.asdf/bin/asdf plugin-add groovy https://github.com/weibemoura/asdf-groovy.git
    ~/.asdf/bin/asdf plugin-add packer https://github.com/weibemoura/asdf-groovy.git

    # Hashicorp tools
    ~/.asdf/bin/asdf plugin-add boundary https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add consul https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add levant https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add nomad https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add packer https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add sentinel https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add serf https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add terraform https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add terraform-ls https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add tfc-agent https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add vault https://github.com/asdf-community/asdf-hashicorp.git
    ~/.asdf/bin/asdf plugin-add waypoint https://github.com/asdf-community/asdf-hashicorp.git
fi

if [ -d ~/.emacs.d ]; then
    echo "~/.emacs.d already exists" 1>&2
else
    echo "Installing doom emacs"
    git clone --depth 1 https://github.com/doomemacs/doomemacs ~/.emacs.d
    ~/.emacs.d/bin/doom install
    ~/.emacs.d/bin/doom sync
fi


if [ -e ~/.tmux/plugins/tpm ]; then
    echo "tpm is already installed"
else
    echo "Installing tpm. Type with alt+I to install plugins"
    git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
fi

if [ -e ~/.theme.sh ]; then
    echo "theme.sh is already installed"
else
    echo "Installing theme.sh"
    git clone https://github.com/lemnos/theme.sh.git ~/.theme.sh
fi
